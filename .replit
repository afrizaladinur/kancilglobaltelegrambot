mode = "sequential"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python csv_importer.py"

[[workflows.workflow]]
name = "Dev Bot"
author = 39314606

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "ENVIRONMENT=development python main.py"

[[workflows.workflow]]
name = "Telegram Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
